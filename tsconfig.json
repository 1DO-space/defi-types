{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "moduleResolution": "node",
    "sourceMap": false,
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "**/*.js",
    "**/*.ts",
    "package.json"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
